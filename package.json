{
  "name": "mudpuppy",
  "version": "2.0.0",
  "description": "MCP-first autonomous AI agent with Telegram, memory, and heartbeat",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "mudpuppy": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js",
    "build:watch": "tsc --watch",
    "dev": "tsx src/cli/index.ts",
    "dev:mcp": "tsx src/mcp-server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "mcp:start": "node dist/mcp-server.js"
  },
  "keywords": [
    "ai",
    "agent",
    "autonomous",
    "claude",
    "mcp",
    "telegram",
    "memory",
    "mudpuppy"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.0",
    "grammy": "^1.30.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  }
}
